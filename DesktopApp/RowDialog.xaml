<Window x:Class="DBill.WpfApp.RowDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Додати/Редагувати рядок" Height="400" Width="500" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="0">
            <StackPanel Margin="10" Name="spFields">
                <!-- Динамічно додаються поля для кожного стовпця -->
            </StackPanel>
        </ScrollViewer>
        <DockPanel LastChildFill="False" VerticalAlignment="Bottom" Margin="0,0,0,10" Grid.Row="1">
            <Button Content="OK" Width="80" Margin="10,0,0,0" Name="btnOk" DockPanel.Dock="Right" Click="btnOk_Click"/>
            <Button Content="Скасувати" Width="80" Name="btnCancel" DockPanel.Dock="Right" Click="btnCancel_Click"/>
        </DockPanel>
    </Grid>
</Window>