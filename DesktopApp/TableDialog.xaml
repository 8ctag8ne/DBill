<Window x:Class="DBill.WpfApp.TableDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit table" Height="400" Width="500" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="#F5F5F5" Padding="8" CornerRadius="4" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Table name:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                <TextBox x:Name="tbTableName" Width="200" Margin="10,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
        <GroupBox Header="Columns" Grid.Row="1">
            <StackPanel>
                <ListBox x:Name="lbColumns" DisplayMemberPath="Display" Height="200"/>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Left">
                    <TextBox x:Name="tbColumnName" Width="120" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <ComboBox x:Name="cbColumnType" Width="120" Margin="0,0,10,0" VerticalAlignment="Center">
                        <ComboBoxItem Content="integer"/>
                        <ComboBoxItem Content="real"/>
                        <ComboBoxItem Content="char"/>
                        <ComboBoxItem Content="string"/>
                        <ComboBoxItem Content="integerInvl"/>
                        <ComboBoxItem Content="file"/>
                    </ComboBox>
                    <Button Content="Add" Width="70" Margin="10,0,0,0" Click="BtnAddColumn_Click" VerticalAlignment="Center"/>
                    <Button Content="Delete" Width="70" Margin="10,0,0,0" Click="BtnDeleteColumn_Click" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="80" Margin="0,0,10,0" Click="BtnOk_Click"/>
            <Button Content="Cancel" Width="80" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>